# Production Environment Variables
# Copy this file to .env and fill in your values

# Set to "production" to use PostgreSQL instead of SQLite
VERCEL_ENV=production

# Neon PostgreSQL Connection String
# Format: postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://user:password@your-neon-db-host.neon.tech/neondb

# JWT Secret Key (generate a strong random key)
SECRET_KEY=replace_with_your_secure_secret_key

# Database Initialization Key (for /api/init-db endpoint)
INIT_DB_KEY=your_secure_init_key

# Optional: Set to higher number if you need longer token expiration
# TOKEN_EXPIRY_MINUTES=60 