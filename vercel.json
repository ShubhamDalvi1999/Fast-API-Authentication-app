{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/vercel_handler.py"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/backend/vercel_handler.py"
    },
    {
      "src": "/docs",
      "dest": "/backend/vercel_handler.py"
    },
    {
      "src": "/openapi.json",
      "dest": "/backend/vercel_handler.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/build/static/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*\\.[a-zA-Z0-9]{2,}$)",
      "dest": "/frontend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/index.html"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  }
} 